---
import "../styles/global.css"
import Meander from "../components/meander.astro"

import gh from "../assets/github/github-mark.svg"
import { Image } from "astro:assets"

const links = [
  { name: "portfolio", href: "https://portfolio.fbold.dev/" },
  { name: "blog", href: "https://blog.fbold.dev" },
  { name: "tao", href: "https://tao.fbold.dev" },
]

const miscButtons = [
  { content: "github", href: "" },
  // { content: "", href: "" },
  // { content: "", href: "" },
]
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
  </head>
  <body
    class="dm--animate bg-bg dark:bg-bg-d dark:text-text-d text-text font-main text-md"
  >
    <Meander />
    <div
      class="h-full w-full max-w-lg mx-auto flex flex-col items-center justify-center"
    >
      <div class="relative mx-20 flex flex-col gap-2">
        <div
          class="dm--animate text-center bg-bg dark:bg-bg-d absolute p-1 px-2 left-1/2 -translate-x-1/2 text-nowrap -translate-y-1/2"
        >
          <h1 class="">Hi, I'm Fred</h1>
          <!-- This is the landing page, these are relevant links: -->
        </div>
        <div
          class="dm--animate flex flex-col gap-2 bg-bg dark:bg-bg-d text-center text-xl items-center justify-center border border-text p-6 px-10"
        >
          {
            links.map((link) => (
              <a
                class="blur--link relative group text-shadow-m cursor-pointer w-min text-bg-d dark:text-bg no-underline"
                href={link.href}
              >
                {link.name}
                <span class="h-[2px] bg-bg-d dark:bg-bg w-full absolute top-[15px] block transition-[scale,opacity] duration-300 scale-0 group-hover:scale-100 opacity-0 group-hover:opacity-100 origin-center" />
              </a>
            ))
          }
        </div>
        <div class="w-full h-8 flex gap-2">
          {
            miscButtons.map((b) => (
              <a
                type="button"
                class="dm--animate flex-grow p-2 text-center items-center justify-center flex bg-bg dark:bg-bg-d text-lg border border-text h-8"
                href={b.href}
              >
                <span class="blur--link">{b.content}</span>
              </a>
            ))
          }
          <button
            type="button"
            class="dm--animate flex items-center justify-center text-md font-bold flex-grow p-2 bg-bg dark:bg-bg-d border border-text h-8"
            >ð“‡¢ð“†¸</button
          >
          <button
            type="button"
            class="dark:hidden bg-bg text-lg font-bold cursor-pointer ml-auto border border-text aspect-square h-8"
            onclick="toggledarkmode()">â˜¾</button
          >
          <button
            type="button"
            onclick="togglelightmode()"
            class="hidden dark:block bg-bg-d dark:bg-bg-d text-lg text-center font-bold cursor-pointer ml-auto border border-text aspect-square h-8"
            >â˜€ï¸Ž</button
          >
        </div>
      </div>
    </div>
  </body>
</html>

<script is:inline>
  function toggledarkmode() {
    console.log("dark")
    document.querySelector("html")?.classList.add("dark")
  }
  function togglelightmode() {
    document.querySelector("html")?.classList.remove("dark")
  }
</script>
