---
import "../styles/global.css"
import Meander from "../components/meander.astro"
import Layout from "../layouts/main.astro"

const links = [
  { name: "about", href: "/about" },
  { name: "portfolio", href: "https://portfolio.fbold.dev/" },
  { name: "blog", href: "/blog" },
]

const miscButtons = [{ content: "github", href: "https://github.com/fbold" }]
---

<Layout>
  <Meander />
  <div
    class="h-full w-full max-w-lg mx-auto flex flex-col items-center justify-center"
  >
    <div class="relative mx-20 flex flex-col gap-2">
      <!-- <div class="flex w-full h-8 gap-2"> -->
      <div
        class="text-center bg-surface -translate-y-1/2 top-0 absolute left-1/2 -translate-x-1/2 text-secondary border border-accent p-1 px-3"
      >
        <!-- <span -->
        <!--   class="absolute top-0 right-0 h-[calc(50%+0.5px)] w-[1px] bg-accent" -->
        <!-- ></span> -->
        <!-- <span -->
        <!--   class="absolute top-0 left-0 h-[calc(50%+0.5px)] w-[1px] bg-accent" -->
        <!-- ></span> -->
        <h1 class="text-nowrap">◊ WELCOME ◊</h1>
      </div>
      <!-- <div class="flex items-center justify-center border border-accent aspect-square text-center p-0 text-2xl bg-surface font-bold">✧</div> -->
      <!-- </div> -->
      <div
        class="flex flex-col gap-2 bg-surface text-center text-xl items-center justify-center border border-accent p-6 pt-8 px-10"
      >
        {
          links.map((link) => (
            <a
              class="blur--link relative group  cursor-pointer w-min text-bg-d dark:text-bg no-underline"
              href={link.href}
            >
              {link.name}
            </a>
          ))
        }
      </div>
      <div class="w-full h-8 flex gap-2 text-secondary">
        {
          miscButtons.map((b) => (
            <a
              type="button"
              class="flex-grow p-2 bg-surface text-center items-center justify-center flex text-base border border-accent h-8"
              href={b.href}
              target="_blank"
            >
              <span class="blur--link">{b.content}</span>
            </a>
          ))
        }
        <div
          class="flex items-center justify-center text-sm flex-grow p-2 bg-surface border border-accent h-8"
        >
          🜃🜂🜄🜁
        </div>
        <div
          class="flex bg-surface text-lg items-center justify-center font-bold border border-accent aspect-square h-8"
        >
          ☾
        </div>
      </div>
      <div class="w-full h-5 flex gap-2 text-secondary">
        <div
          class="flex flex-grow items-center px-2 justify-center bg-surface border border-accent"
        >
          <span class="-translate-y-[0.5px] text-nowrap text-sm">
            ✿ ❁ ✾ ❋ ✽ ✿
          </span>
        </div>
        <a
          class="flex-grow px-2 bg-surface text-center items-center justify-center flex text-xs border border-accent"
          href="https://www.collletttivo.it/typefaces/necto-mono"
          target="_blank"
        >
          <span class="blur--link -translate-y-[1px]">typeface</span>
        </a>
      </div>
    </div>
  </div>
</Layout>
